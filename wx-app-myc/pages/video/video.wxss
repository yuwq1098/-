/* pages/video/video.wxss */
.video-container{
  width: 100%;
}
.video-list{
  width: 750rpx;
}
.video-list .item{
  width: 750rpx;
}
.video-list .item .video-wrap{
  width: 750rpx;
  height: 422rpx;
}
.video-list .item .video-wrap .poster-wrap{
  width: 100%;
  height: 100%;
  position: relative;
}
.video-list .video-wrap .poster-wrap .poster-pic{
  width: 100%;
  height: 100%;
  position: absolute;
}
.video-list .video-wrap .poster-wrap .play-icon{
  width: 36px;
  height: 20px;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
}
.video-list .item .video-wrap video{
  width: 750rpx;
  height: 422rpx;
}
.video-list .u-content{
  width: 100%;
  padding: 28rpx 28rpx 34rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
/* 出处 */
.video-list .u-content .author{
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-size: 32rpx;
}
/* 标题 */
.video-list .u-content .title{
  height: 48rpx;
  line-height: 48rpx;
  color: #777;
  font-size: 26rpx;
}