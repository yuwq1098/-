/* pages/hall/series/series.wxss */

page{
  background-color: #fff;
}

.city-container {
  width: 100%;
  height: 100%;
}

/* 可滚动视图区域 */
.city-container .scroll-view {
  width: 100%;
  height: 1300rpx;
}

.scroll-view .view-inner{
  width: 692rpx;
  box-sizing: border-box;
  padding: 20rpx 26rpx 10rpx;
}

/* 品牌信息 */
.brand-info{
   height: 120rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: flex-start;
   box-sizing: border-box;
   padding: 0 20rpx;
}
.brand-info .icon{
   width: 88rpx;
   height: 88rpx;
}
.brand-info .txt{
   font-size: 30rpx;
   color: #545454;
   margin-left: 20rpx;
}

/* 车系展示组 */
.group-series{
  width: 750rpx;
}
.group-series .subtit{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background: #f2f2f2;
  box-sizing: border-box;
  padding: 0 20rpx;
  color: #333;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;
}
.group-series .subtit .icon{
  width: 28rpx;
  height: 28rpx;
}

/* 品牌列表 */
.group-series .series-list{
  width: 710rpx;
  margin: 0 auto;
}
.group-series .series-list .item{
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.group-series .series-list .item:not(:last-child){
  border-bottom: 1rpx solid #ededed;
}
.group-series .series-list .item .icon{
  width: 48rpx;
  height: 48rpx;
}
.group-series .series-list .item .txt{
  margin-left: 12rpx;
  color: #545454;
}
.group-series .series-list .item.act .txt{
  color: #31a3f5;
}