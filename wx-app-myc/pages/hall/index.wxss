@import "template/list/list.wxss";
@import "template/filter/filter.wxss";

/* pages/hall/index.wxss */

page {
  background: #f2f2f2;
}

.hall-container {
  width: 100%;
  height: 100%;
}

/* 可滚动视图区域 */

.hall-container .scroll-view {
  width: 100%;
  height: 1300rpx;
}

/* 大厅搜索区 */

.hall-container .search-box {
  position: relative;
  height: 80rpx;
  background: #fff;
}

.hall-container .search-box .city-select {
  float: left;
  padding: 0 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
}

.search-box .city-select text {
  font-size: 28rpx;
  line-height: 80rpx;
  float: left;
  color: #666;
}

.search-box .city-select image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 6rpx;
}

.hall-container .search-box .input-box {
  overflow: hidden;
  height: 80rpx;
  position: relative;
  box-sizing: border-box;
  padding-right: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.search-box .input-box input {
  width: 100%;
  min-height: 50rpx;
  height: 50rpx !important;
  line-height: 50rpx;
  border: none;
  background: #f2f2f2;
  -webkit-border-radius: 5rpx;
  border-radius: 5rpx;
  font-size: 27rpx;
  color: #333;
  box-sizing: border-box;
  padding: 0 15rpx;
  vertical-align: middle;
}

.hall-container .search-box .search-btn {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 18rpx;
  top: 18rpx;
}

.search-box .search-btn image {
  width: 48rpx;
  height: 48rpx;
}

/* 轮播区域 */

.slide-box {
  height: 310rpx;
  background: #f2f2f2;
}

.slide-box swiper {
  height: 310rpx;
  width: 100%;
}

.slide-box image {
  width: 100%;
  height: 100%;
}

/* 信息筛选区域 */

.info-filter-box {
  height: 72rpx;
  line-height: 72rpx;
  background: #fff;
  color: #333;
  margin-bottom: 20rpx;
}

.info-filter-box.has-res-total {
  margin-bottom: 0;
  margin-top: 0;
}

.filter-list {
  display: flex;
  padding: 0 4rpx;
}

.filter-list .item {
  height: 72rpx;
  flex: 1;
  text-align: center;
  position: relative;
  padding: 0 1px 0 0;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.filter-list .item.active{
  color: #31a3f5;
}

.filter-list .item text {
   max-width: 140rpx;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}

.filter-list .item image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 6rpx;
}

.filter-list .item:not(:last-child)::after {
  content: "";
  display: block;
  width: 2rpx;
  height: 24rpx;
  background: #ccc;
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

/* 车辆信息匹配条数 */

.hall-container .res-total {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 12px;
  padding: 16rpx 100rpx 16rpx 20rpx;
  position: relative;
  overflow: hidden;
}

.res-total .tips {
  color: #717171;
  text-align: left;
}

.res-total .tips .vital {
  color: #ff6533;
  margin: 0 3px;
  font-size: 14px;
}

.hall-container .res-total .newAdds {
  position: absolute;
  right: -25rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  padding: 0 45rpx 0 25rpx;
  border-radius: 21rpx;
  height: 42rpx;
  line-height: 42rpx;
  background: -moz-linear-gradient(left, #f34242, #ffac63);
  background: -o-linear-gradient(left, #f34242, #ffac63);
  background: -webkit-gradient(linear, 0% 0%, 100% 0%, from(#f34242), to(#ffac63));
  color: #fff;
}

/* 无数据加载(缺省页) */
.none-data-view{
  width: 100%;
  height: 400px;
  background-color: #fff;
  display: flex;
  flex-direction:column;
  align-items: center;
}
.none-data-view .pic{
  width: 353rpx;
  height: 287rpx;
  margin-top: 50rpx;
  margin-right: 15rpx;
}
.none-data-view .tips{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  display: block;
  text-align: center;
  color: #717171;
  margin-left: 15rpx;
}

/* 汽车列表页 */
.b2b-car-list-box {
  width: 100%;
}

/* 加载更多 */

.loading-more {
  height: 72rpx;
  line-height: 72rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.loading-more .img-loading {
  width: 38rpx;
  height: 38rpx;
  position: relative;
}

@-webkit-keyframes rotate {
  0% {
    -webkit-transform: rotate(0deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.loading-more .img-loading .loading-pic {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  display: block;
  -moz-animation: rotate 1.5s infinite linear;
  -webkit-animation: rotate 1.5s infinite linear;
  animation: rotate 1.5s infinite linear;
}

.loading-more .tips {
  font-size: 28rpx;
  letter-spacing: 1rpx;
  text-indent: 1rpx;
  margin-left: 12rpx;
  color: #717171;
}

/* 已滑到底 */

.have-slippery {
  height: 72rpx;
  line-height: 72rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.have-slippery .tips {
  font-size: 28rpx;
  letter-spacing: 1rpx;
  text-indent: 1rpx;
  margin-left: 12rpx;
  color: #717171;
}

/* 返回顶部按钮 */

.backToTop {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  top: 70vh;
  right: 30rpx;
  background: #46b6f7;
  background: -moz-linear-gradient(135deg, #58c0f1, #5182ef);
  background: -o-linear-gradient(135deg, #58c0f1, #5182ef);
  background: -webkit-gradient(linear, 0% 0%, 100% 100%, from(#58c0f1), to(#5182ef));
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
  transform: translate3d(120rpx, 0, 0) rotateZ(270deg);
  filter: alpha(opacity=50);
  opacity: 0.5;
}

.backToTop.active {
  transition: all 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
  transform: translate3d(0, 0, 0) rotateZ(0deg);
  filter: alpha(opacity=100);
  opacity: 1;
}

.backToTop image {
  width: 50rpx;
  height: 50rpx;
}

